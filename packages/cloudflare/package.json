    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.24.0",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20250412.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "wrangler": "^4.10.0"
  }
}
